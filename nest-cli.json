{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json",
    "assets": ["**/*.proto"],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "evaluation-service": {
      "type": "application",
      "root": "apps/evaluation-service",
      "entryFile": "main",
      "sourceRoot": "apps/evaluation-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/evaluation-service/tsconfig.app.json"
      }
    },
    "event-service": {
      "type": "application",
      "root": "apps/event-service",
      "entryFile": "main",
      "sourceRoot": "apps/event-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-service/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "invitation-service": {
      "type": "application",
      "root": "apps/invitation-service",
      "entryFile": "main",
      "sourceRoot": "apps/invitation-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/invitation-service/tsconfig.app.json"
      }
    },
    "project-service": {
      "type": "application",
      "root": "apps/project-service",
      "entryFile": "main",
      "sourceRoot": "apps/project-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/project-service/tsconfig.app.json"
      }
    }
  }
}